@article{cannon_bias_2015,
	title = {Bias {Correction} of {GCM} {Precipitation} by {Quantile} {Mapping}: {How} {Well} {Do} {Methods} {Preserve} {Changes} in {Quantiles} and {Extremes}?},
	volume = {28},
	issn = {0894-8755, 1520-0442},
