	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Alexander, L. V. and Zhang, X. and Peterson, T. C. and Caesar, J. and Gleason, B. and Klein Tank, A. M. G. and Haylock, M. and Collins, D. and Trewin, B. and Rahimzadeh, F. and Tagipour, A. and Rupa Kumar, K. and Revadekar, J. and Griffiths, G. and Vincent, L. and Stephenson, D. B. and Burn, J. and Aguilar, E. and Brunet, M. and Taylor, M. and New, M. and Zhai, P. and Rusticucci, M. and Vazquez-Aguirre, J. L.},
